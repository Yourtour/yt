<input type="hidden" class="form-control" id="id" name="id">

<div class="form-group">
    <label for="code" class="col-md-2 control-label">代码</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="code" id="code" placeholder="代码">
    </div>
</div>

<div class="form-group">
    <label for="name" class="col-md-2 control-label">名称</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="name" id="name" placeholder="名称">
    </div>
</div>

<div class="form-group">
    <label for="star" class="col-md-2 control-label">星级</label>
    <div class="col-md-4">
        <input type="range" class="form-control" name="star" id="star" min="1" max="5 placeholder="星级">
    </div>
</div>

<div class="form-group">
    <label for="payment" class="col-md-2 control-label">支付信息</label>
    <div class="col-md-4">
        <textarea class="form-control" name="payment" id="payment" placeholder="支付信息"></textarea>
    </div>
</div>

<div class="form-group">
    <label for="phone" class="col-md-2 control-label">联系电话</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="phone" id="phone" placeholder="联系电话">
    </div>
</div>

<div class="form-group">
    <label for="address" class="col-md-1 control-label">地址</label>
    <div class="col-md-2">
        <input type="text" class="form-control" name="address" id="address" placeholder="地址">
    </div>
    <label for="postCode" class="col-md-1 control-label">邮编</label>
    <div class="col-md-2">
        <input type="text" class="form-control" name="postCode" id="postCode" placeholder="邮编">
    </div>
</div>

<div class="form-group">
    <label for="website" class="col-md-2 control-label">网址</label>
    <div class="col-md-4">
        <input type="url" class="form-control" name="website" id="website" placeholder="网址">
    </div>
</div>

<div class="form-group">
    <label for="position" class="col-md-2 control-label">位置信息</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="position" id="position" placeholder="位置信息">
    </div>
</div>

<div class="form-group">
    <label for="bookingMemo" class="col-md-2 control-label">预订须知</label>
    <div class="col-md-4">
        <textarea class="form-control" name="bookingMemo" id="bookingMemo" rows="3" cols="160" placeholder="预订须知"></textarea>
    </div>
</div>

<div class="form-group">
    <label for="tips" class="col-md-2 control-label">旅行贴士</label>
    <div class="col-md-4">
        <textarea class="form-control" name="tips" id="tips" rows="3" cols="160" placeholder="旅行贴士"></textarea>
    </div>
</div>

<div class="form-group">
    <label for="tags" class="col-md-2 control-label">资源标签</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="tags" id="tags" placeholder="资源标签">
    </div>
</div>

<div class="form-group">
    <label for="feature" class="col-md-2 control-label">资源特点</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="feature" id="feature" placeholder="资源特点">
    </div>
</div>

<div class="form-group">
    <label for="placeId" class="col-md-2 control-label">目的地ID</label>
    <div class="col-md-4">
        <input type="text" class="form-control" name="placeId" id="placeId" placeholder="目的地ID">
    </div>
</div>