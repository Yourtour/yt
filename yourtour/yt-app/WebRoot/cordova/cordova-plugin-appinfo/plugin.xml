<?xmlversion="1.0"encoding="utf-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    id="cordova-plugin-app"
    version="1.2.0">

    <name>AppInfo</name>
    <description>Description</description>
    
    <js-module name="AppInfo" src="www/AppInfo.js">
        <clobbers target="AppInfo"/> <!-- JS 中对象的引用 -->
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="AppInfo">
                <param name="android-package" value="com.yt.cordova.plugins.AppInfo"/>
            </feature>
        </config-file>

        <source-file src="src/android/AppInfo.java" target-dir="src/com/yt/cordova/plugins"/>
    </platform>
</plugin>